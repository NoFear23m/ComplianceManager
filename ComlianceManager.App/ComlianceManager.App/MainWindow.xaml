<Window xmlns:Views="clr-namespace:ComplianceManager.Views;assembly=ComplianceManager.Views"  x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComlianceManager.App"
        mc:Ignorable="d"
        Title="MainWindow" Height="520" Width="969">
    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Datei">
                <MenuItem Header="_Beenden" Click="ShutDown"/>

            </MenuItem>
            <MenuItem Header="Reklamation">
                <MenuItem Header="Neue Reklamation erstellen" Command="{Binding CreateNewItemCommand}"/>
            </MenuItem>
            <MenuItem Header="Verwaltung">
                <MenuItem Header="Benutzerverwaltung" Command="{Binding EditUsers}"/>
                <MenuItem Header="Reklamationsursachen Verwalten" Command="{Binding EditReasons}"/>
                <MenuItem Header="Reklamationsarten Veralten" Command="{Binding EditEntryTypes}"/>
            </MenuItem>
        </Menu>
        <Views:uclMain />
    </DockPanel>
</Window>
